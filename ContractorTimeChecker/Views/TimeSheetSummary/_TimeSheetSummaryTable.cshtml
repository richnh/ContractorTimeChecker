@model List<ContractorTimeChecker.Models.TimesheetSummary>

<div class="form-group">
    <div class="col-md-10">
        <div class="row">
            <div class="col-xs-3">
                <div>
                   
                    @Html.Label("Candidate Name")
                </div>
            </div>
            <div class="col-xs-3">
                @Html.Label(Html.Encode(@Model.FirstOrDefault().CandidateName) )
            </div>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Client Name
        </th>
        <th>
            Job Title
        </th>
        <th>
            Date
        </th>
        <th>
            Duration
        </th>
        <th>
            Placement Type
        </th>
    </tr>
    @foreach (var item in @Model)
    {
        <tr>
            <td>
                @Html.Encode(item.ClientName)
            </td>

            <td>
                @Html.Encode(item.JobTitle)
            </td>

            <td>
                @Html.Encode(item.Date)
            </td>

            <td>
                @Html.Encode(item.Duration)
            </td>

            <td>
                @if (item.PlacementType != null)
                {@Html.Encode((ContractorTimeChecker.Models.Enums.PlacementTypeEnum)item.PlacementType)}
            </td>
        </tr>
    }
</table> 