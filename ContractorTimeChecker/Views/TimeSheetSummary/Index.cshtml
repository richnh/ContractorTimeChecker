
@{
    ViewBag.Title = "TimeSheet Summary Generator";
}

<h2>TimeSheet Summary Generator</h2>

@using (Html.BeginForm("Create", "TimeSheetSummary", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Candidate Name")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("CandidateName")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Client Name")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("ClientName")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Job Title")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("JobTitle")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Placement Start Date")
                </div>
                <div class="col-md-10">
                    <input type="date" name="PlacementStartDate">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Placement End Date")
                </div>
                <div class="col-md-10">
                    <input type="date" name="PlacementEndDate">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Placement Type")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("PlacementType")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-default" value="Generate Timesheet" />
                </div>
            </div>
}