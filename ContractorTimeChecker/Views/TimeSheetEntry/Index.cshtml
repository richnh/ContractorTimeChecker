
@{
    ViewBag.Title = "TimeSheet Entry";
}

<h2>Add TimeSheet Entry</h2>

@using (Html.BeginForm("Create", "TimeSheetEntry", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Candidate Name")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("CandidateName")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Client Name")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("ClientName")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Job Title")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("JobTitle")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Duration")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("Duration")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Placement Type")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("PlacementType")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
}