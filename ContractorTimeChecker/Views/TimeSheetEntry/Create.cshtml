
@{
    ViewBag.Title = "TimeSheet Entry";
}

<div class="row">
    <h2>Add TimeSheet Entry</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            Enter the information for the Contractor
            and click Submit
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "TimeSheetEntry", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("Candidate Name")
                </div>
                <div class="col-md-10">
                    @Html.TextBox("CandidateName")
                </div>
            </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Label("Client Name")
                    </div>
                    <div class="col-md-10">
                        @Html.TextBox("ClientName")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Label("Job Title")
                    </div>
                    <div class="col-md-10">
                        @Html.TextBox("JobTitle")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Label("Duration")
                    </div>
                    <div class="col-md-10">
                        @Html.TextBox("Duration")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Label("Date")
                    </div>
                    <div class="col-md-10">
                        <input type="date" name="Date">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.Label("Placement Type")
                    </div>
                    <div class="col-md-10">
                        @Html.TextBox("PlacementType")
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-default" value="Submit" />
                    </div>
                </div>
        }

    </div>

</div>
